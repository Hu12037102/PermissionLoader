<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.permissionloader.MainActivity">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请悬浮窗权限"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btn_float_window"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请通知栏权限"
        app:layout_constraintTop_toBottomOf="@id/btn_float_window"
        android:id="@+id/btn_notification"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/atv_permission_list"
        app:layout_constraintTop_toBottomOf="@id/btn_notification"
        android:gravity="center"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求权限方式一"
        android:id="@+id/btn_request_1"
        app:layout_constraintTop_toBottomOf="@id/atv_permission_list"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求权限方式二"
        android:id="@+id/btn_request_2"
        app:layout_constraintTop_toBottomOf="@id/btn_request_1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试"
        app:layout_constraintTop_toBottomOf="@id/btn_request_2"
        android:id="@+id/btn_test"
        />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_test"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.google.permissionloader.PermissionFragment"
        android:id="@+id/fragment"
        tools:ignore="FragmentTagUsage" />


  </androidx.constraintlayout.widget.ConstraintLayout>